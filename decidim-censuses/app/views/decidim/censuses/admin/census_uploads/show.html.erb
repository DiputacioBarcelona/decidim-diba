
<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('admin.show.title', scope: 'decidim.censuses') %>
    </h2>
  </div>
  <div class="card-section">
    <% if @status.count > 0 %>
      <p><%= t('decidim.censuses.admin.show.data', count: @status.count, 
        due_date: l(@status.last_import_at, format: :long)) %>
      </p>
      <%= link_to t('decidim.censuses.admin.delete_all.title'), 
        censuses_delete_all_path, 
        method: 'post',
        class: 'button alert',
        data: { confirm: t('decidim.censuses.admin.delete_all.confirm') } %>
      <% else %>
        <p><%= t('admin.show.empty', scope: 'decidim.censuses') %></p>
    <% end %>
  </div>
</div>


<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('admin.new.title', scope: 'decidim.censuses') %>
    </h2>
  </div>
  <div class="card-section">
    <p><%= t('decidim.censuses.admin.new.info') %></p>
    <%= form_tag census_uploads_path, multipart: true, class: 'form' do %>
      <%= label_tag :name, t('admin.new.file', scope: 'decidim.censuses') %>
      <%= file_field_tag :file %>
      <%= submit_tag t('admin.new.submit', scope: 'decidim.censuses'), class: 'button' %>
    <% end %>
  </div>
</div>




